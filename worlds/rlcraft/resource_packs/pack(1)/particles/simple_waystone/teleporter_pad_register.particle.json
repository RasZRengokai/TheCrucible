{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "simple_waystone:teleporter_pad_register",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/simple_waystone/particles/teleporter_pad_register"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 10,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"radius": 0.5,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.75
			},
			"minecraft:particle_initial_spin": {
				"rotation_rate": "v.particle_lifetime *100 * Math.random(-1, 1)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["v.particle_lifetime * Math.random(-1, 1) *2.5", 3, "v.particle_lifetime * Math.random(-1, 1) *2.5"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.2, 0.2],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 1,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [1, 1],
						"step_UV": [1, 0],
						"frames_per_second": 8,
						"max_frame": 8,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FF580C79",
						"0.79": "#FFAF36CB",
						"1.0": "#00DB62FA"
					}
				}
			}
		}
	}
}