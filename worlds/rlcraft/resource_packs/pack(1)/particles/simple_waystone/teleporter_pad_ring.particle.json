{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "simple_waystone:teleporter_pad_ring",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/simple_waystone/particles/teleporter_pad_ring"
			}
		},
		"events": {
			"spawn_reverse": {
				"particle_effect": {
					"effect": "simple_waystone:teleporter_pad_ring_reverse",
					"type": "emitter"
				}
			},
			"spawn_inner": {
				"particle_effect": {
					"effect": "simple_waystone:teleporter_pad_ring_inner",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 10,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 3
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": ["spawn_reverse", "spawn_inner"]
			},
			"minecraft:emitter_shape_point": {
				"offset": ["Math.cos(v.emitter_age * 180) * 0.5", 0.2, "Math.sin(v.emitter_age * 180) * 0.5"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 3
			},
			"minecraft:particle_initial_spin": {
				"rotation_rate": "v.particle_lifetime *100 * Math.random(-1, 1)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["Math.random(-0.5, 0.5) * v.particle_age", 0.5, "Math.random(-0.5, 0.5) * v.particle_age"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.1, 0.1],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 1,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [1, 1],
						"step_UV": [1, 0],
						"frames_per_second": 8,
						"max_frame": 8,
						"stretch_to_lifetime": true,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FF580C79",
						"0.79": "#FFAF36CB",
						"1.0": "#00DB62FA"
					}
				}
			}
		}
	}
}