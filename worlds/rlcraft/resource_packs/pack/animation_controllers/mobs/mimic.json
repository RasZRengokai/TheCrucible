{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ecbl_bs.mimic.root": {
      "initial_state": "hide",
      "states": {
        "hide": {
          "animations": [
            {
              "hide": "!query.has_target"
            }
          ],
          "transitions": [
            {
              "showing": "query.is_angry"
            }
          ],
          "blend_transition": 0.2
        },
        "idle": {
          "animations": [
            "idle"
          ],
          "transitions": [
            {
              "running": "query.is_angry && query.ground_speed > 0.1"
            },
            {
              "attack_2": "q.is_delayed_attacking"
            }
          ],
          "blend_transition": 0.5
        },
        "running": {
          "animations": [
            {
              "running": "query.modified_move_speed"
            }
          ],
          "transitions": [
            {
              "idle": "query.is_angry && query.ground_speed < 0.1"
            },
            {
              "attack_2": "q.is_delayed_attacking"
            }
          ],
          "blend_transition": 0.5
        },
        "showing": {
          "animations": [
            "showing"
          ],
          "sound_effects": [
            {
              "effect": "showing",
              "locator": "sound"
            }
          ],
          "transitions": [
            {
              "idle": "query.all_animations_finished && query.is_angry && query.ground_speed < 0.1"
            },
            {
              "running": "query.all_animations_finished && query.is_angry && query.ground_speed > 0.1"
            },
            {
              "attack_2": "q.is_delayed_attacking"
            }
          ],
          "blend_transition": 0.1
        },
        "attack_2": {
          "animations": [
            "attack_2"
          ],
          "sound_effects": [
            {
              "effect": "attack",
              "locator": "sound"
            }
          ],
          "transitions": [
            {
              "hiding": "query.all_animations_finished && !query.has_target"
            },
            {
              "running": "query.all_animations_finished && query.has_target && query.is_angry && query.ground_speed > 0.1"
            },
            {
              "idle": "query.all_animations_finished && query.has_target && query.is_angry && query.ground_speed < 0.1"
            },
            {
              "attack_2": "query.all_animations_finished && q.is_delayed_attacking"
            }
          ],
          "blend_transition": 0.5
        },
        "hiding": {
          "animations": [
            "hiding"
          ],
          "sound_effects": [
            {
              "effect": "hiding",
              "locator": "sound"
            }
          ],
          "transitions": [
            {
              "hide": "query.all_animations_finished"
            }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}