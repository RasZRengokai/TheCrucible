{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ecbl_bs.illager_pirate.root": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": ["idle"],
          "transitions": [
            { "walk": "query.ground_speed > 0.1 && !q.has_target" },
            { "walk_has_target_close": "query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'close'" },
            { "walk_has_target_away": "query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'away'" },
            { "attack_1": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" },
            { "idle_has_target": "q.has_target && query.ground_speed < 0.1" }
          ],
          "blend_transition": 0.2
        },

        "idle_has_target": {
          "animations": ["idle_has_target"],
          "transitions": [
            { "walk": "query.ground_speed > 0.1 && !q.has_target" },
            { "walk_has_target_close": "query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'close'" },
            { "walk_has_target_away": "query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'away'" },
            { "attack_1": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" },
            { "idle": "!q.has_target && query.ground_speed < 0.1" }
          ],
          "blend_transition": 0.2
        },

        "walk": {
          "animations": [{ "walk": "query.modified_move_speed*2" }],
          "transitions": [
            { "idle": "!q.has_target && query.ground_speed < 0.1" },
            { "idle_has_target": "q.has_target && query.ground_speed < 0.1" },
            { "walk_has_target_close": "q.has_target && q.property('ecbl_bs:target') == 'close'" },
            { "walk_has_target_away": "q.has_target && q.property('ecbl_bs:target') == 'away'" },
            { "attack_1": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" }
          ],
          "blend_transition": 0.2
        },

        "walk_has_target_close": {
          "animations": [{ "walk_has_target_close": "query.modified_move_speed" }],
          "transitions": [
            { "idle_has_target": "query.ground_speed < 0.1 && q.has_target" },
            { "idle": "!q.has_target && query.ground_speed < 0.1" },
            { "walk": "!q.has_target && query.ground_speed > 0.1" },
            { "walk_has_target_away": "q.has_target && q.property('ecbl_bs:target') == 'away'" },
            { "attack_1": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" }
          ],
          "blend_transition": 0.2
        },

        "walk_has_target_away": {
          "animations": [{ "walk_has_target_away": "query.modified_move_speed" }],
          "transitions": [
            { "idle_has_target": "query.ground_speed < 0.1 && q.has_target" },
            { "idle": "!q.has_target && query.ground_speed < 0.1" },
            { "walk": "!q.has_target && query.ground_speed > 0.1" },
            { "walk_has_target_close": "q.has_target && q.property('ecbl_bs:target') == 'close'" },
            { "attack_1": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" }
          ],
          "blend_transition": 0.2
        },
        "attack_1": {
          "animations": ["attack_1"],
          "transitions": [
            { "idle": "query.all_animations_finished && !q.has_target && query.ground_speed < 0.1" },
            { "idle_has_target": "query.all_animations_finished && q.has_target && query.ground_speed < 0.1" },
            { "walk": "query.all_animations_finished && query.ground_speed > 0.1 && !q.has_target" },
            { "walk_has_target_close": "query.all_animations_finished && query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'close'" },
            { "walk_has_target_away": "query.all_animations_finished && query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'away'" },
            { "attack_1": "query.all_animations_finished && q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "query.all_animations_finished && q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" }
          ],
          "blend_transition": 0.2
        },

        "attack_2": {
          "animations": ["attack_2"],
          "transitions": [
            { "idle": "query.all_animations_finished && !q.has_target && query.ground_speed < 0.1" },
            { "idle_has_target": "query.all_animations_finished && q.has_target && query.ground_speed < 0.1" },
            { "walk": "query.all_animations_finished && query.ground_speed > 0.1 && !q.has_target" },
            { "walk_has_target_close": "query.all_animations_finished && query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'close'" },
            { "walk_has_target_away": "query.all_animations_finished && query.ground_speed > 0.1 && q.has_target && q.property('ecbl_bs:target') == 'away'" },
            { "attack_1": "query.all_animations_finished && q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_1'" },
            { "attack_2": "query.all_animations_finished && q.is_delayed_attacking && q.property('ecbl_bs:attack_type') == 'attack_2'" }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}
