{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ecbl_bs.goblin.root": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": [
            "idle"
          ],
          "transitions": [
            {
              "walk": "!query.is_angry && query.ground_speed > 0.1"
            },
            {
              "attack": "!query.is_angry && query.all_animations_finished && q.is_delayed_attacking"
            },
            {
              "escape": "query.is_angry && query.ground_speed > 0.1"
            },
            {
              "weapon_swinging": "!query.is_angry && q.has_target && q.property('ecbl_bs:no_animation_goblin') == 'first'"
            }
          ],
          "blend_transition": 0.2
        },
        "walk": {
          "animations": [
            {
              "walk": "!query.is_angry && query.modified_move_speed*2"
            }
          ],
          "transitions": [
            {
              "idle": "!query.is_angry && query.ground_speed < 0.1"
            },
            {
              "attack": "!query.is_angry && query.all_animations_finished && q.is_delayed_attacking"
            },
            {
              "escape": "query.is_angry && query.ground_speed > 0.1"
            },
            {
              "weapon_swinging": "!query.is_angry && q.has_target && q.property('ecbl_bs:no_animation_goblin') == 'first'"
            }
          ],
          "blend_transition": 0.2
        },
        "weapon_swinging": {
          "animations": [
            "weapon_swinging"
          ],
          "particle_effects": [
            {
              "effect": "angry",
              "locator": "angry"
            }
          ],
          "sound_effects": [
            {
              "effect": "weapon_swinging",
              "locator": "angry"
            }
          ],
          "transitions": [
            {
              "idle": "!query.is_angry && query.all_animations_finished && query.ground_speed < 0.1"
            },
            {
              "walk": "!query.is_angry && query.all_animations_finished && query.ground_speed > 0.1"
            },
            {
              "attack": "!query.is_angry && query.all_animations_finished && q.is_delayed_attacking"
            },
            {
              "escape": "query.is_angry && query.ground_speed > 0.1"
            }
          ],
          "blend_transition": 0.2
        },
        "attack": {
          "animations": [
            "attack"
          ],
          "transitions": [
            {
              "idle": "!query.is_angry && query.all_animations_finished && query.ground_speed < 0.1"
            },
            {
              "walk": "!query.is_angry && query.all_animations_finished && query.ground_speed > 0.1"
            },
            {
              "attack": "!query.is_angry && query.all_animations_finished && q.is_delayed_attacking"
            },
            {
              "escape": "query.is_angry && query.ground_speed > 0.1"
            }
          ],
          "blend_transition": 0.2
        },
        "escape": {
          "animations": [
            {
              "escape": "query.modified_move_speed"
            }
          ],
          "transitions": [
            {
              "idle": "query.is_angry && query.all_animations_finished && query.ground_speed < 0.1"
            },
            {
              "walk": "!query.is_angry && query.all_animations_finished && query.ground_speed > 0.1"
            },
            {
              "escape": "query.is_angry && query.all_animations_finished && query.ground_speed > 0.1"
            }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}