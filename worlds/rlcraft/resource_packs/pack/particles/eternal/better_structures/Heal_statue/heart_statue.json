{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:heal_heart_statue",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/eternal/better_structures/particle/heart"
			}
		},
		"curves": {
			"variable.speed": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [4.77, 1, 0]
			},
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 0.84, 1, 0.87, 1.08, 1, 0, 0, 0]
			}
		},
		"components": {
			"minecraft:emitter_local_space": {
				"position": true,
				"rotation": true
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 30,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.2
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, "variable.particle_random_1*2", 0],
				"radius": 0.7,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1.5, 1)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "variable.speed*math.random(7, 3)*variable.particle_random_1", 0],
				"linear_drag_coefficient": 8
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.4*variable.scale", "0.4*variable.scale"],
				"facing_camera_mode": "lookat_y",
				"uv": {
					"texture_width": 32,
					"texture_height": 256,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [32, 32],
						"step_UV": [0, 32],
						"frames_per_second": 12,
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_age/variable.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}