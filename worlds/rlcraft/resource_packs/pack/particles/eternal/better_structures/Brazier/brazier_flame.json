{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:brazier_flame",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/eternal/better_structures/particle/pixel"
			}
		},
		"curves": {
			"variable.c": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.31, 0.21, 0]
			},
			"variable.z": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1.52, 1]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 5,
				"max_particles": 60
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 5
			},
			"minecraft:emitter_shape_box": {
				"half_dimensions": [0.5, 0.1, 0.5],
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 2
			},
			"minecraft:particle_initial_speed": 0.1,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["variable.particle_random_2*0.5*(variable.particle_random_2 < 0.5 ? math.cos(variable.particle_age*180)*5 : math.sin(variable.particle_age*180)*-5)", 5, "variable.particle_random_3*0.5*(variable.particle_random_2 < 0.5 ? math.sin(variable.particle_age*180)*5 : math.cos(variable.particle_age*180)*-5)"],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.2*variable.c*variable.z", "0.2*variable.c"],
				"facing_camera_mode": "lookat_direction"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#7DC8721F",
						"0.38": "#FFFFA531",
						"0.63": "#FFFF5A00",
						"0.86": "#996B6B6B",
						"1.0": "#007D7D7D"
					}
				}
			}
		}
	}
}