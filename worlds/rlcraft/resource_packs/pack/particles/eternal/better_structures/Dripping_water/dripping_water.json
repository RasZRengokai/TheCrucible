{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:dripping_water",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/particles"
			}
		},
		"curves": {
			"variable.c": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, -0.01, -0.59, -0.58]
			},
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.47, 1, 1, 3.7, 6.58, 5.01]
			},
			"variable.scale_2": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [3.32, 1, 0.5, 0.5]
			}
		},
		"events": {
			"event": {
				"particle_effect": {
					"effect": "ecbl_bs:water_drop_impact",
					"type": "particle"
				}
			},
			"event1": {
				"sound_effect": {
					"event_name": "cauldron_drip.water.pointed_dripstone"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 1
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 5
			},
			"minecraft:emitter_shape_point": {
				"offset": [0, -1, 0]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 4
			},
			"minecraft:particle_initial_spin": {
				"rotation": -90
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "variable.c*35", 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.15*variable.scale_2", "0.15*variable.scale"],
				"facing_camera_mode": "lookat_direction",
				"direction": {
					"mode": "custom",
					"custom_direction": [0, -1, 0]
				},
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": [43, 13],
					"uv_size": [3, 3]
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 0.1,
				"coefficient_of_restitution": 0.1,
				"collision_radius": 0.05,
				"expire_on_contact": true,
				"events": [
					{
						"event": "event",
						"min_speed": 0
					},
					{
						"event": "event1",
						"min_speed": 0
					}
				]
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00FFFFFF",
						"0.15": "#66FFFFFF"
					}
				}
			}
		}
	}
}