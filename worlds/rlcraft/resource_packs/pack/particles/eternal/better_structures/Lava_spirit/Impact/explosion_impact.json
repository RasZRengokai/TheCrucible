{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:explosion_impact",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/eternal/better_structures/particle/box"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 8.36, 8.43, 3.03, 1.3, 1]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 150,
				"max_particles": 15
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.2
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [0, 2, 0],
				"radius": 0.2,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1.2, 1)*variable.particle_random_2"
			},
			"minecraft:particle_initial_spin": {
				"rotation": -90
			},
			"minecraft:particle_initial_speed": "8*variable.particle_random_2+2",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.1, "0.1*variable.scale*variable.particle_random_2+0.1"],
				"facing_camera_mode": "lookat_direction"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_age/variable.particle_lifetime",
					"gradient": {
						"0.0": "#FFFF6C15",
						"0.45": "#FFFFB900",
						"0.83": "#00FF0000",
						"1.0": "#00FF920E"
					}
				}
			}
		}
	}
}