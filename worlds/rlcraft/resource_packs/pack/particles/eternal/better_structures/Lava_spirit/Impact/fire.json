{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:fire",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/eternal/better_structures/particle/fire"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1.32, 1, 1]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 150,
				"max_particles": 70
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.2
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [0, 2, 0],
				"radius": 0.5,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.7, 0.5)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "variable.particle_random_2*360"
			},
			"minecraft:particle_initial_speed": "5*variable.particle_random_2+2",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 1, 0],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.5*variable.scale", "0.5*variable.scale"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 20,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [20, 20],
						"step_UV": [20, 0],
						"frames_per_second": 12,
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_random_2",
					"gradient": {
						"0.0": "#FFFFAB7A",
						"0.23": "#ffffffff",
						"0.64": "#ffffffff",
						"1.0": "#FFFF8484"
					}
				}
			}
		}
	}
}