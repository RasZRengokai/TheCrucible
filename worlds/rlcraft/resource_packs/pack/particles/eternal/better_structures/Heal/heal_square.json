{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:heal_square",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/eternal/better_structures/particle/box"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 2.58, 1, 1]
			},
			"variable.speed": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [7.99, 1, 0]
			}
		},
		"events": {
			"event": {
				"particle_effect": {
					"effect": "ecbs:heal_heart",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 40,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 0.2
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": "event"
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, "variable.particle_random_1*2-1", 0],
				"radius": 1,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1, 2)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "variable.speed*math.random(7, 3)", 0],
				"linear_drag_coefficient": 8
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.1, "0.1*variable.scale"],
				"facing_camera_mode": "lookat_y"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_age/variable.particle_lifetime",
					"gradient": {
						"0.0": "#FFFF2020",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}