{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:lightning",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/eternal/better_structures/particle/lightning"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 50,
				"max_particles": 15
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.7
			},
			"minecraft:emitter_shape_box": {
				"offset": [0, 1.5, 0],
				"half_dimensions": [3, 1, 3],
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.7
			},
			"minecraft:particle_initial_spin": {
				"rotation": "variable.particle_random_2*360"
			},
			"minecraft:particle_initial_speed": 0.1,
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.5+variable.particle_random_2*0.2", "0.5+variable.particle_random_2*0.2"],
				"facing_camera_mode": "lookat_direction",
				"uv": {
					"texture_width": 320,
					"texture_height": 240,
					"flipbook": {
						"base_UV": [0, "math.floor(variable.particle_random_2*3)*80"],
						"size_UV": [80, 80],
						"step_UV": [80, 0],
						"frames_per_second": 12,
						"max_frame": 4,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.13": "#FF008BFF",
						"0.75": "#FFABC9FF",
						"1.0": "#000058FF"
					}
				}
			}
		}
	}
}