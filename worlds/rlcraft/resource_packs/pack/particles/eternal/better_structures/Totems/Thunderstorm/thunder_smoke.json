{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:smoke",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/eternal/better_structures/particle/smoke"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 150,
				"max_particles": 30
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.5
			},
			"minecraft:emitter_shape_box": {
				"offset": [0, 0.5, 0],
				"half_dimensions": ["math.random(3, 1.5)", 0.2, "math.random(3, 1.5)"],
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(1, 1.1)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "variable.particle_random_2*360"
			},
			"minecraft:particle_initial_speed": 6,
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.6*variable.scale", "0.6*variable.scale"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 144,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 12,
						"max_frame": 12,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_random_2",
					"gradient": {
						"0.0": "#FF7D7D7D",
						"0.08": "#FF4D4D4D",
						"0.29": "#FF828282",
						"0.5": "#FF5C5C5C",
						"0.74": "#FF5E5E5E",
						"0.89": "#FF7F7F7F",
						"1.0": "#FF505050"
					}
				}
			}
		}
	}
}