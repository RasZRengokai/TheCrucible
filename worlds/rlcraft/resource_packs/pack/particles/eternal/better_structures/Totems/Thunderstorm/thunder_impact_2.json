{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:thunder_impact_2",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/eternal/better_structures/particle/box"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "catmull_rom",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.72, 1, 1, 0, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 10
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 0.4
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, 0.2, 0],
				"radius": 3,
				"direction": ["math.random(1, -1)", 1, "math.random(1, -1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1.5
			},
			"minecraft:particle_initial_spin": {
				"rotation": -90
			},
			"minecraft:particle_initial_speed": 5,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.cos(variable.particle_age*360)", -10, "math.sin(variable.particle_age*360)"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.1*variable.scale", "0.1*variable.scale"],
				"facing_camera_mode": "lookat_direction"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.22": "#FF5688FF",
						"0.64": "#FFFFFFFF",
						"1.0": "#000091FF"
					}
				}
			}
		}
	}
}