{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:turtle_totem_2",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/eternal/better_structures/particle/box"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 20,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_box": {
				"offset": [0, "Math.random(-0.9, -0.5)", 0],
				"half_dimensions": [0.5, 0.5, 0.5],
				"direction": ["Math.random(-1.0, 1.0)", "Math.random(-1.0, 1.0)", "Math.random(-1.0, 1.0)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 2
			},
			"minecraft:particle_initial_speed": "Math.random(0, 0.2)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "1*variable.particle_random_1", 0],
				"linear_drag_coefficient": 1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.01 + variable.particle_random_1*0.05)", "(0.01 + variable.particle_random_1*0.05)"],
				"facing_camera_mode": "lookat_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_random_1+variable.particle_age/variable.particle_lifetime",
					"gradient": {
						"0.0": "#ff1a6600",
						"0.19": "#FF418038",
						"0.4": "#FFE1FFE5",
						"0.61": "#ff4d9933",
						"0.75": "#FF2E6E2D",
						"1.0": "#0000CC00"
					}
				}
			}
		}
	}
}