{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:floating_ashes",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/eternal/better_structures/particle/box"
			}
		},
		"curves": {
			"variable.c": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.31, 0.21, 0]
			},
			"variable.z": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1.52, 1]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 30,
				"max_particles": 600
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 10
			},
			"minecraft:particle_motion_collision": {
				"expire_on_contact": true,
				"collision_radius": 0
			},
			"minecraft:emitter_shape_box": {
				"offset": [0, 10, 0],
				"half_dimensions": [10, 10, 10],
				"direction": ["math.random(1, -1)", "math.random(1, -1)", "math.random(1, -1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 10
			},
			"minecraft:particle_initial_speed": 2,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["variable.particle_random_2*0.5*(variable.particle_random_2 < 0.5 ? math.cos(variable.particle_age*180)*5 : math.sin(variable.particle_age*180)*-5)", "math.random(3, -1)", "variable.particle_random_3*0.5*(variable.particle_random_2 < 0.5 ? math.sin(variable.particle_age*180)*5 : math.cos(variable.particle_age*180)*-5)"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.3*variable.c*variable.z", "0.3*variable.c"],
				"facing_camera_mode": "lookat_direction"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime*2",
					"gradient": {
						"0.0": "#7D868686",
						"0.2": "#FFFCE38E",
						"0.43": "#9EFFA531",
						"0.67": "#FFFF5A00",
						"0.89": "#996B6B6B",
						"1.0": "#007D7D7D"
					}
				}
			}
		}
	}
}