{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:collapsing_block",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/campfire_smoke"
			}
		},
		"curves": {
			"variable.scale": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 0.83, 0]
			},
			"variable.x": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [2.76, 2.06, 1.73, 0.91, 0, 0]
			},
			"variable.z": {
				"type": "linear",
				"input": "variable.particle_random_2",
				"horizontal_range": 1,
				"nodes": [1, 0.44, 1, 0.73, 1, 0.53]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 1203,
				"max_particles": 30
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 0.1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": 0.5,
				"direction": ["math.random(0.5, -0.5)", "math.random(0.5, -0.5)", "math.random(0.5, -0.5)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.4, 1.2)"
			},
			"minecraft:particle_initial_speed": 3,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "v.particle_random_1 > 0.5 ? -15*variable.particle_random_2 : -2*variable.particle_random_2", 0],
				"linear_drag_coefficient": 2
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["v.particle_random_1 > 0.5 ? 0.4 : 0.4", "v.particle_random_1 > 0.5 ? 0.4 : 0.4"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 192,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [0, 16],
						"frames_per_second": 8,
						"max_frame": 12,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 0.1,
				"coefficient_of_restitution": 0.1,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_random_2",
					"gradient": {
						"0.0": "#C98D8D8D",
						"0.22": "#FFCFCFCF",
						"0.54": "#FFFFFFFF",
						"1.0": "#8CDEDEDE"
					}
				}
			}
		}
	}
}