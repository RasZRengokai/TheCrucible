{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "ecbl_bs:cockroach",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particle/particles"
			}
		},
		"curves": {
			"variable.z": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1.52, 1]
			},
			"variable.c": {
				"type": "linear",
				"input": "variable.particle_random_2",
				"horizontal_range": 1,
				"nodes": [0.22, 0.21, 0.09]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 3,
				"max_particles": 300
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 10
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, 0.1, 0],
				"radius": 10,
				"direction": ["math.random(0.5, -0.5)", 0, "math.random(0.5, -0.5)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 12
			},
			"minecraft:particle_initial_speed": 0.6,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["variable.particle_random_2*0.5*(variable.particle_random_2 < 0.5 ? math.cos(variable.particle_age*90)*0.5 : math.sin(variable.particle_age*90)*-0.5)", -1, "variable.particle_random_3*0.5*(variable.particle_random_2 < 0.5 ? math.sin(variable.particle_age*90)*0.5 : math.cos(variable.particle_age*90)*-0.5)"],
				"linear_drag_coefficient": 0.1
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.15*variable.c", "0.15*variable.c*2"],
				"facing_camera_mode": "direction_y",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": [19, 91],
					"uv_size": [3, 3]
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.1
			},
			"minecraft:particle_expire_if_not_in_blocks": ["minecraft:air"],
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "variable.particle_age/variable.particle_lifetime",
					"gradient": {
						"0.0": "#001E1E1E",
						"0.17": "#FF302E2E",
						"0.84": "#FF373737",
						"1.0": "#00222222"
					}
				}
			}
		}
	}
}