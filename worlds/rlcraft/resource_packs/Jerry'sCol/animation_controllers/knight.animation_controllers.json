{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.knight.combat": {
			"initial_state": "melee",
			"states": {
				"melee": {
					"blend_transition": 0.2,
					"animations": [
						{
							"attack": "variable.attack_time"
						}
					],
					"transitions": [
						{
							"archer": "query.variant == 2"
						},
						{
							"cavalry": "query.variant == 3"
						}
					]
				},
				"archer": {
					"blend_transition": 0.2,
					"animations": [
						"archerstance"
					],
					"transitions": [
						{
							"melee": "query.variant == 1"
						},
						{
							"cavalry": "query.variant == 3"
						}
					]
				},
				"cavalry": {
					"blend_transition": 0.2,
					"animations": [],
					"transitions": [
						{
							"melee": "query.variant == 1"
						},
						{
							"archer": "query.variant == 2"
						}
					]
				}
			}
		}
	}
}