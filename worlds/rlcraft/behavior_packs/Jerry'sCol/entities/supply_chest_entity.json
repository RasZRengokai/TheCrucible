{
    "format_version": "1.21.0",
    "minecraft:entity": {
        "description": {
            "identifier": "jerrys_colonies:supply_chest_entity",
            "is_summonable": true,
            "is_spawnable": false
        },
        "component_groups": {
            "jerrys_colonies:despawn": {
                "minecraft:instant_despawn": {}
            }
        },
        "components": {
            "minecraft:inventory": {
                "can_be_siphoned_from": true,
                "container_type": "inventory",
                "private": false,
                "restrict_to_owner": false,
                "inventory_size": 27
            },
            "minecraft:collision_box": {
                "height": 0.7,
                "width": 1
            },
            "minecraft:entity_sensor": {
                "subsensors": [
                    {
                        "range": 7,
                        "event_filters": {
                            "all_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "player"
                                },
                                {
                                    "test": "has_container_open",
                                    "subject": "other",
                                    "value": true
                                }
                            ]
                        },
                        "event": "jerrys_colonies:open"
                    },
                    {
                        "range": 7,
                        "event_filters": {
                            "all_of": [
                                {
                                    "test": "is_family",
                                    "subject": "other",
                                    "value": "player"
                                },
                                {
                                    "test": "has_container_open",
                                    "subject": "other",
                                    "value": false
                                }
                            ]
                        },
                        "event": "jerrys_colonies:close"
                    }
                ]
            },
            "minecraft:type_family": {
                "family": ["supply_chest"]
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": "no"
                    }
                ]
            },
            "minecraft:knockback_resistance": {
                "value": 1
            },
            "minecraft:health": {
                "min": 1,
                "value": 1,
                "max": 1
            }
        },
        "events": {
            "jerrys_colonies:open": {
                "queue_command": {
                    "command": [
                        "tag @s[tag=!custom_open] add custom_open"
                    ]
                }
            },
            "jerrys_colonies:close": {
                "queue_command": {
                    "command": [
                        "tag @s[tag=custom_open] remove custom_open"
                    ]
                }
            },
            "jerrys_colonies:despawn": {
                "add": {
                    "component_groups": [
                        "jerrys_colonies:despawn"
                    ]
                }
            }
        }
    }
}
