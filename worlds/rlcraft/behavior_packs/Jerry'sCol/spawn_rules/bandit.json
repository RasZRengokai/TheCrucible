{
	"format_version": "1.8.0",
	"minecraft:spawn_rules": {
		"description": {
			"identifier": "jerrys_colonies:bandit",
			"population_control": "monster"
		},
		"conditions": [
			{
				"minecraft:spawns_on_surface": {},
				"minecraft:brightness_filter": {
					"min": 5,
					"max": 15,
					"adjust_for_weather": true
				},
				"minecraft:weight": {
					"default": 1
				},
				"minecraft:biome_filter": {
					"any_of": [
						{
							"test": "has_biome_tag",
							"operator": "==",
							"value": "plains"
						},
						{
							"test": "has_biome_tag",
							"operator": "==",
							"value": "forest"
						},
						{
							"test": "has_biome_tag",
							"operator": "==",
							"value": "taiga"
						},
						{
							"test": "has_biome_tag",
							"operator": "==",
							"value": "desert"
						}
					]
				},
				"minecraft:difficulty_filter": {
					"min": "easy",
					"max": "hard"
				},
				"minecraft:distance_filter": {
					"min": 40,
					"max": 50
				},
				"minecraft:density_limit": {
					"surface": 1,
					"underground": 0
				}
			}
		]
	}
}