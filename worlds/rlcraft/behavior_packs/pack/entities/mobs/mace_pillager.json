{
	"format_version": "1.21.0",
	"minecraft:entity": {
		"description": {
			"identifier": "ecbl_bs:mace_pillager",
			"spawn_category": "monster",
			"is_spawnable": true,
			"is_summonable": true
		},
		"component_groups": {
			"ecbl_bs:parry": {
				"minecraft:damage_sensor": {
					"triggers": {
						"cause": "all",
						"deals_damage": false
					}
				}
			},
			"ecbl_bs:parry_animation": {
				"minecraft:angry": {
					"broadcast_anger": false,
					"broadcast_anger_on_attack": false,
					"broadcast_anger_on_being_attacked": false,
					"duration": 1,
					"calm_event": {
						"event": "ecbl_bs:event_remove_angry_animation",
						"target": "self"
					}
				}
			},
			"ecbl_bs:attack_cooldown": {
				"minecraft:timer": {
					"time": 10,
					"looping": false,
					"time_down_event": {
						"event": "ecbl_bs:event_attack_mace_off",
						"target": "self"
					}
				},
				"minecraft:movement": {
					"value": 0
				},
				"minecraft:attack": {
					"damage": 0
				}
			},
			"ecbl_bs:movement": {
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 2,
					"set_persistent": true,
					"within_radius": 10,
					"must_see": true,
					"must_reach": true,
					"reselect_targets": true,
					"entity_types": [
						{
							"max_dist": 10,
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "player"
							}
						}
					]
				},
				"minecraft:movement": {
					"value": 0.25
				},
				"minecraft:attack": {
					"damage": 1
				},
				"minecraft:behavior.delayed_attack": {
					"attack_duration": 2.5,
					"attack_once": false,
					"attack_types": "N/A",
					"hit_delay_pct": 0.5,
					"random_stop_interval": 0,
					"require_complete_path": true,
					"track_target": false,
					"on_attack": {
						"target": "self",
						"event": "ecbl_bs:event_attack_mace_on"
					}
				},
				"minecraft:attack_cooldown": {
					"attack_cooldown_time": 100
				},
				"minecraft:behavior.melee_box_attack": {
					"priority": 3
				}
			}
		},
		"components": {
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? (query.is_baby ? 12 : 5) + (Math.die_roll(query.equipment_count,1,3)) : 0"
			},
			"minecraft:movement.basic": {},
			"minecraft:type_family": {
				"family": [
					"vindicator",
					"monster",
					"illager",
					"mob"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:collision_box": {
				"width": 0.6,
				"height": 1.9
			},
			"minecraft:health": {
				"value": 32,
				"max": 32
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true
			},
			"minecraft:jump.static": {},
			"minecraft:follow_range": {
				"value": 64
			},
			"minecraft:loot": {
				"table": "loot_tables/eternal/better_structures/entities/mace_pillager.json"
			},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:behavior.random_stroll": {
				"priority": 9,
				"speed_multiplier": 1
			},
			"minecraft:behavior.look_at_player": {
				"priority": 10,
				"look_distance": 8,
				"probability": 0.02
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"ecbl_bs:movement",
						"ecbl_bs:parry"
					]
				},
				"queue_command": {
					"command": "event entity @s ecbl_bs:event_parry_random"
				}
			},
			"ecbl_bs:event_parry_on": {
				"add": {
					"component_groups": [
						"ecbl_bs:parry"
					]
				}
			},
			"ecbl_bs:event_parry_off": {
				"remove": {
					"component_groups": [
						"ecbl_bs:parry"
					]
				}
			},
			"ecbl_bs:event_parry_random": {
				"randomize": [
					{
						"weight": 3,
						"add": {
							"component_groups": [
								"ecbl_bs:parry"
							]
						},
						"queue_command": {
							"command": [
								"tag @s add parry"
							],
							"target": "self"
						}
					},
					{
						"weight": 7,
						"remove": {
							"component_groups": [
								"ecbl_bs:parry"
							]
						},
						"queue_command": {
							"command": [
								"tag @s remove parry"
							],
							"target": "self"
						}
					}
				]
			},
			"ecbl_bs:event_attack_mace_on": {
				"add": {
					"component_groups": [
						"ecbl_bs:attack_cooldown"
					]
				},
				"remove": {
					"component_groups": [
						"ecbl_bs:movement"
					]
				}
			},
			"ecbl_bs:event_attack_mace_off": {
				"remove": {
					"component_groups": [
						"ecbl_bs:attack_cooldown"
					]
				},
				"add": {
					"component_groups": [
						"ecbl_bs:movement"
					]
				}
			},
			"ecbl_bs:event_parry_animation":{
				"add": {
					"component_groups": [
						"ecbl_bs:parry_animation"
					]
				}
			},
			"ecbl_bs:event_remove_angry_animation":{
				"remove": {
					"component_groups": [
						"ecbl_bs:parry_animation"
					]
				}
			}
		}
	}
}