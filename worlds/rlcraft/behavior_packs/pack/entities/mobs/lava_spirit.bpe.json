{
	"format_version": "1.19.60",
	"minecraft:entity": {
		"description": {
			"identifier": "ecbl_bs:lava_spirit",
			"is_summonable": true,
			"is_spawnable": true,
			"properties": {
				"eternal:variant": {
					"client_sync": true,
					"type": "int",
					"default": "math.random_integer(0,1)",
					"range": [
						0,
						1
					]
				}
			}
		},
		"component_groups": {
			"eternal:despawn": {
				"minecraft:instant_despawn": {}
			},
			"eternal:death": {
				"minecraft:movement": {
					"value": 0.0
				},
				"minecraft:pushable": {
					"is_pushable": false,
					"is_pushable_by_piston": false
				},
				"minecraft:damage_sensor": {
					"triggers": {
						"cause": "all",
						"deals_damage": false
					}
				},
				"minecraft:timer": {
					"time": 1.625,
					"time_down_event": {
						"event": "despawn"
					}
				},
				"minecraft:behavior.drop_item_for": {
					"seconds_before_pickup": 0.0,
					"cooldown": 5,
					"drop_item_chance": 1,
					"offering_distance": 0.0,
					"minimum_teleport_distance": 1024.0,
					"target_range": [
						64.0,
						64.0,
						64.0
					],
					"teleport_offset": [
						0.0,
						1.0,
						0.0
					],
					"speed_multiplier": 1.0,
					"search_range": 64,
					"search_height": 64,
					"search_count": 0,
					"goal_radius": 64.0,
					"entity_types": [
						{
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "player"
							},
							"max_dist": 64
						}
					],
					"priority": 1,
					"loot_table": "loot_tables/eternal/better_structures/entities/lava.json",
					"time_of_day_range": [
						0.0,
						1.0
					]
				}
			},
			"eternal:alive": {
				"minecraft:pushable": {
					"is_pushable": true,
					"is_pushable_by_piston": true
				},
				"minecraft:damage_sensor": {
					"triggers": {
						"deals_damage": false,
						"on_damage": {
							"filters": {
								"test": "has_damage",
								"subject": "self",
								"value": "fatal"
							},
							"event": "on_death"
						}
					}
				},
				"minecraft:on_death": {
					"event": "on_death"
				},
				"minecraft:health": {
					"value": 20
				},
				"minecraft:fire_immune":{},
				"minecraft:behavior.random_stroll": {
					"priority": 7
				},
				"minecraft:behavior.ranged_attack": {
					"swing": true,
					"attack_interval": 3,
					"attack_radius": 15,
					"attack_radius_min": 3,
					"priority": 0
				},
				"minecraft:shooter": {
					"def": "ecbl_bs:lava_spit"
				},
				"minecraft:movement": {
					"value": 0.2
				},
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 0,
					"attack_interval": 3,
					"within_radius": 15,
					"entity_types": {
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						}
					}
				},
				"minecraft:is_shaking": {}
			}
		},
		"components": {
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 1,
				"entity_types": {
					"filters": {
						"test": "is_family",
						"subject": "other",
						"operator": "not",
						"value": "lava_spirit"
					}
				}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 12 + (query.equipment_count * Math.Random(1,3)) : 0"
			},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:health": {
				"value": 20
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"monster",
					"lava_spirit"
				]
			},
			"minecraft:collision_box": {
				"width": 0.7,
				"height": 1.1
			},
			"minecraft:navigation.walk": {},
			"minecraft:jump.static": {},
			"minecraft:movement.basic": {},
			"minecraft:physics": {}
		},
		"events": {
			"despawn": {
				"add": {
					"component_groups": [
						"eternal:despawn"
					]
				}
			},
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"eternal:alive"
					]
				}
			},
			"on_death": {
				"queue_command": {
					"command": "summon ecbl_bs:explosion ~~~"
				},
				"add": {
					"component_groups": [
						"eternal:death"
					]
				},
				"remove": {
					"component_groups": [
						"eternal:alive"
					]
				}
			}
		}
	}
}