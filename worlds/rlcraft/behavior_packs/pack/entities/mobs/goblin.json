{
	"format_version": "1.21.0",
	"minecraft:entity": {
		"description": {
			"identifier": "ecbl_bs:goblin",
			"spawn_category": "monster",
			"is_spawnable": true,
			"is_summonable": true,
			"properties": {
				"ecbl_bs:no_animation_goblin": {
					"client_sync": true,
					"type": "enum",
					"values": [
						"first",
						"second"
					],
					"default": "first"
				}
			}
		},
		"component_groups": {
			"ecbl_bs:to_escape": {
				"minecraft:angry": {},
				"minecraft:behavior.avoid_mob_type": {
					"priority": 0,
					"entity_types": [
						{
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "player"
							},
							"max_dist": 50,
							"walk_speed_multiplier": 1.2,
							"sprint_speed_multiplier": 1.2
						}
					],
					"avoid_target_xz": 50,
					"avoid_target_y": 50,
					"max_dist": 50,
					"sprint_speed_multiplier": 1.2,
					"walk_speed_multiplier": 1.2,
					"on_escape_event": {
						"event": "ecbl_bs:event_goblin_escape",
						"target": "self"
					}
				}
			},
			"ecbl_bs:high_health": {
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 0,
					"set_persistent": true,
					"within_radius": 10,
					"must_see": true,
					"must_reach": true,
					"reselect_targets": true,
					"entity_types": [
						{
							"max_dist": 10,
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "player"
							}
						}
					]
				},
				"minecraft:attack": {
					"damage": 0
				},
				"minecraft:behavior.delayed_attack": {
					"attack_duration": 1.17,
					"attack_once": false,
					"attack_types": "",
					"hit_delay_pct": 0.33,
					"random_stop_interval": 0,
					"reach_multiplier": 2,
					"require_complete_path": true,
					"track_target": false
				},
				"minecraft:behavior.melee_box_attack": {
					"priority": 0
				},
				"minecraft:behavior.hurt_by_target": {
					"priority": 0
				}
			}
		},
		"components": {
			"minecraft:equip_item": {},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"deals_damage": "yes",
						"on_damage": {
							"filters": [
								{
									"test": "actor_health",
									"operator": "<",
									"subject": "self",
									"value": 6
								}
							],
							"target": "self",
							"event": "ecbl_bs:event_goblin_escape"
						}
					}
				]
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? (query.is_baby ? 12 : 5) + (Math.die_roll(query.equipment_count,1,3)) : 0"
			},
			"minecraft:type_family": {
				"family": [
					"goblin",
					"monster",
					"mob"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:collision_box": {
				"width": 0.5,
				"height": 1
			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:movement": {
				"value": 0.35
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:follow_range": {
				"value": 64
			},
			"minecraft:loot": {
				"table": "loot_tables/eternal/better_structures/entities/goblin.json"
			},
			"minecraft:equipment": {
				"table": "loot_tables/eternal/better_structures/entities/goblin_dagger.json",
				"slot_drop_chance": [
					{
						"drop_chance": 100,
						"slot": "slot.weapon.mainhand"
					}
				]
			},
			"minecraft:inventory": {
				"container_type": "inventory",
				"inventory_size": 1,
				"private": true
			},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:equippable": {
				"slots": [
					{
						"slot": 0,
						"accepted_items": [
							"minecraft:wooden_sword",
							"minecraft:stone_sword",
							"minecraft:iron_sword",
							"minecraft:diamond_sword",
							"minecraft:netherite_sword",
							"ecbl_bs:dagger"
						]
					}
				]
			},
			"minecraft:behavior.random_stroll": {
				"priority": 3,
				"speed_multiplier": 1
			},
			"minecraft:behavior.look_at_player": {
				"priority": 10,
				"look_distance": 8,
				"probability": 0.02
			},
			"minecraft:behavior.equip_item": {
				"priority": 0
			},
			"minecraft:behavior.pickup_items": {
				"priority": 7,
				"max_dist": 3,
				"goal_radius": 2,
				"speed_multiplier": 1.0
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_goblin_escape": {
				"add": {
					"component_groups": [
						"ecbl_bs:to_escape"
					]
				},
				"remove": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_goblin_escape_off": {
				"remove": {
					"component_groups": [
						"ecbl_bs:to_escape"
					]
				},
				"add": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_goblin_agro_on": {
				"add": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_goblin_agro_off": {
				"remove": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_goblin_animation": {
				"set_property": {
					"ecbl_bs:no_animation_goblin": "second"
				}
			}
		}
	}
}