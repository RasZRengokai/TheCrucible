{
	"format_version": "1.19.60",
	"minecraft:entity": {
		"description": {
			"identifier": "ecbl_bs:elder_pillager",
			"is_summonable": true,
			"is_spawnable": true
		},
		"component_groups": {
			"ecbl_bs:teleport": {
				"minecraft:angry": {
					"duration": -1
				}
			},
			"ecbl_bs:high_health": {
				"minecraft:behavior.ranged_attack": {
					"attack_interval": 2.5,
					"attack_radius": 25,
					"attack_radius_min": 0,
					"priority": 0
				},
				"minecraft:shooter": {
					"def": "ecbl_bs:elder_magic",
					"magic": true,
					"sound": "mob.evocation_illager.cast_spell"
				},
				"minecraft:behavior.nearest_attackable_target": {
					"priority": 0,
					"set_persistent": true,
					"within_radius": 25,
					"must_see": true,
					"must_reach": true,
					"reselect_targets": true,
					"entity_types": [
						{
							"max_dist": 25,
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "player"
							}
						}
					]
				}
			}
		},
		"components": {
			"minecraft:behavior.random_stroll": {
				"priority": 6,
				"speed_multiplier": 1
			},
			"minecraft:behavior.look_at_target": {
				"look_distance": 8,
				"probability": 1,
				"angle_of_view_vertical": 360,
				"angle_of_view_horizontal": 360
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"deals_damage": "yes",
						"on_damage": {
							"filters": [
								{
									"test": "actor_health",
									"operator": "<",
									"subject": "self",
									"value": 12
								}
							],
							"target": "self",
							"event": "ecbl_bs:event_elder_pillager_teleport_on"
						}
					},
					{
						"cause": "all",
						"deals_damage": "yes",
						"on_damage": {
							"filters": [
								{
									"test": "actor_health",
									"operator": "<",
									"subject": "self",
									"value": 12
								}
							],
							"target": "self",
							"event": "ecbl_bs:event_elder_pillager_animation_teleport_on"
						}
					}
				]
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 12 + (query.equipment_count * Math.Random(1,3)) : 0"
			},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:health": {
				"value": 24
			},
			"minecraft:movement": {
				"value": 0.2,
				"max": 0.2
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:type_family": {
				"family": [
					"mob",
					"monster",
					"elder_pillager",
					"pillager"
				]
			},
			"minecraft:collision_box": {
				"width": 1,
				"height": 3
			},
			"minecraft:navigation.walk": {},
			"minecraft:jump.static": {},
			"minecraft:movement.basic": {},
			"minecraft:physics": {},
			"minecraft:loot": {
				"table": "loot_tables/eternal/better_structures/entities/elder_pillager.json"
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_elder_pillager_teleport_on": {
				"queue_command": {
					"command": [
						"tag @s add teleport_pillager"
					]
				},
				"remove": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_elder_pillager_teleport_off": {
				"queue_command": {
					"command": [
						"tag @s remove teleport_pillager"
					]
				},
				"add": {
					"component_groups": [
						"ecbl_bs:high_health"
					]
				}
			},
			"ecbl_bs:event_elder_pillager_animation_teleport_on": {
				"add": {
					"component_groups": [
						"ecbl_bs:teleport"
					]
				}
			},
			"ecbl_bs:event_elder_pillager_animation_teleport_off": {
				"remove": {
					"component_groups": [
						"ecbl_bs:teleport"
					]
				}
			},
			"ecbl_bs:elder_pillager_particle": {
				"queue_command": {
					"command": "tag @s add particle"
				}
			},
			"ecbl_bs:elder_pillager_no_particle": {
				"queue_command": {
					"command": "tag @s remove particle"
				}
			}
		}
	}
}