{
	"format_version": "1.20.80",
	"minecraft:entity": {
		"description": {
			"identifier": "ecbl_bs:locked_chest_inventory",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"ecbl_bs:open": {
				"minecraft:type_family": {
					"family": [
						"inanimate",
						"open_chest"
					]
				},
				"minecraft:angry": {
					"duration": -1
				}
			},
			"ecbl_bs:close": {
				"minecraft:type_family": {
					"family": [
						"inanimate",
						"close_chest"
					]
				}
			}
		},
		"components": {
			"minecraft:custom_hit_test": {
				"hitboxes": [
					{
						"width": 0.6,
						"height": 0.5,
						"pivot": [
							0,
							0,
							0
						]
					}
				]
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": false,
				"always_show": false
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:inventory": {
				"container_type": "inventory",
				"inventory_size": 27,
				"private": false,
				"restrict_to_owner": false
			},
			"minecraft:knockback_resistance": {
				"value": 100
			},
			"minecraft:collision_box": {
				"width": 0.01,
				"height": 0.01
			},
			"minecraft:physics": {
				"has_collision": false,
				"has_gravity": false
			},
			"minecraft:loot": {
				"table": "loot_tables/empty.json"
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"ecbl_bs:close"
					]
				}
			},
			"ecbl_bs:event_locked_chest_open": {
				"add": {
					"component_groups": [
						"ecbl_bs:open"
					]
				},
				"remove": {
					"component_groups": [
						"ecbl_bs:close"
					]
				}
			},
			"ecbl_bs:event_locked_chest_close": {
				"add": {
					"component_groups": [
						"ecbl_bs:close"
					]
				},
				"remove": {
					"component_groups": [
						"ecbl_bs:open"
					]
				}
			}
		}
	}
}