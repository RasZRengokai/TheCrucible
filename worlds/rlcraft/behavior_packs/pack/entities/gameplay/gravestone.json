{
	"format_version": "1.20.80",
	"minecraft:entity": {
		"description": {
			"identifier": "ecbl_bs:gravestone_entity",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"ecbl_bs:natural_grave": {
				"minecraft:timer": {
					"time": 120,
					"looping": true,
					"time_down_event": {
						"event": "ecbl_bs:event_gravestone_natural_randomize",
						"target": "self"
					}
				}
			}
		},
		"components": {
			"minecraft:nameable": {
				"allow_name_tag_renaming": false,
				"always_show": false
			},
			"minecraft:health": {
				"value": 5,
				"max": 5,
				"min": 0
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": false
				}
			},
			"minecraft:knockback_resistance": {
				"value": 100
			},
			"minecraft:type_family": {
				"family": [
					"inanimate"
				]
			},
			"minecraft:collision_box": {
				"width": 0,
				"height": 0
			},
			"minecraft:physics": {},
			"minecraft:custom_hit_test": {
				"hitboxes": [
					{
						"width": 1,
						"height": 1,
						"pivot": [
							0,
							0,
							0
						]
					}
				]
			},
			"minecraft:loot": {
				"table": "loot_tables/empty.json"
			},
			"minecraft:item_hopper": {},
			"minecraft:inventory": {
				"container_type": "horse",
				"inventory_size": 54,
				"private": false
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"ecbl_bs:natural_grave"
					]
				}
			},
			"ecbl_bs:event_gravestone_natural_randomize": {
				"randomize": [
					{
						"queue_command": {
							"command": "summon zombie"
						},
						"weight": 25
					},
					{
						"queue_command": {
							"command": "summon skeleton"
						},
						"weight": 25
					},
					{
						"queue_command": {
							"command": "testfor @s"
						},
						"weight": 50
					}
				]
			},
			"ecbl_bs:event_remove_natural_grave": {
				"remove": {
					"component_groups": [
						"ecbl_bs:natural_grave"
					]
				}
			}
		}
	}
}