{
    "format_version": "1.20.0",
    "minecraft:entity": {
        "description": {
            "identifier": "ecbl_bc:floating_sand",
            "is_spawnable": false,
            "is_summonable": true,
            "properties": {
                "ecbl_bs:particle": {
                    "client_sync": true,
                    "type": "enum",
                    "values": [
                        "start",
                        "exit"
                    ],
                    "default": "start"
                }
            }
        },
        "components": {
            "minecraft:custom_hit_test": {
                "hitboxes": [
                    {
                        "width": 2,
                        "height": 2,
                        "pivot": [
                            0,
                            1,
                            0
                        ]
                    }
                ]
            },
            "minecraft:collision_box": {
                "height": 0,
                "width": 0
            },
            "minecraft:knockback_resistance": {
                "value": 1,
                "max": 1
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            },
            "minecraft:physics": {
                "has_collision": false,
                "has_gravity": false
            }
        },
        "component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": false
                }
            }
        },
        "events": {
            "despawn": {
                "add": {
                    "component_groups": [
                        "despawn"
                    ]
                }
            },
            "ecbl_bs:start":{
                "set_property": {
                    "ecbl_bs:particle": "start"
                }
            },
            "ecbl_bs:exit":{
                "set_property": {
                    "ecbl_bs:particle": "exit"
                }
            }
        }
    }
}